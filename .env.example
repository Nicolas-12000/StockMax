# Example environment variables for local development
# Copy this file to `.env` and fill secrets when running locally (do NOT commit `.env`)

# Datasource (H2 by default)
SPRING_DATASOURCE_URL=jdbc:h2:mem:inventario
SPRING_DATASOURCE_DRIVER=org.h2.Driver
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=

# JPA
SPRING_JPA_HIBERNATE_DDL_AUTO=create-drop
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_FORMAT_SQL=true

# H2 console
SPRING_H2_CONSOLE_ENABLED=true

# Application
SERVER_PORT=8080

# Recommended for local MySQL development (copy into .env when using MySQL)
# Change `create-drop` to `update` for iterative development
#SPRING_JPA_HIBERNATE_DDL_AUTO=update
#SPRING_JPA_SHOW_SQL=true
#SPRING_JPA_FORMAT_SQL=true
# Use MySQL dialect when running against MySQL
#SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect

# Example PostgreSQL config (uncomment and use if you switch to Postgres)
#SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/stockmax
#SPRING_DATASOURCE_DRIVER=org.postgresql.Driver
#SPRING_DATASOURCE_USERNAME=postgres
